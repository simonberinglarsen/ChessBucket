@{
    ViewData["Title"] = "Home Page";
}
<div ng-app="gameUploadApp" ng-controller="gameUploadCtrl">
    <div class="page-header">
        <h1>Upload</h1>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2" for="comment">Pgn:</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="5" id="comment" ng-model="pgnText" placeholder="insert pgn-text here"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Tags:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="pwd" placeholder="ex: #CopenhagenOpen #Round1">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" ng-click="uploadGame()">Submit</button>
            </div>
        </div>
    </div>
    <pre class="alert alert-danger">{{viewmodel.Errors}}</pre>
</div>

@section Scripts {
    <script src="~/js/gameUploadApp.js"></script>
}
